<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nouveau.jeuxoint.PrimaryController">
   <children>
      <Label text="Primary View" />
      <Canvas fx:id="gameCanvas" width="600" height="600" />
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="suggestionButton" text="Suggestion" onAction="#handleSuggestion"/>
            <Button fx:id="saveButton" text="Save" onAction="#handleSave"/>
            <Button fx:id="loadButton" text="Load" onAction="#handleLoad"/>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
